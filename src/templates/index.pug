extends _layout/layout

block variables
	- var title = 'INDEX'
	- var description = 'Description for home page'
	- var bodyclass = 'home'
	- var href = "/index.html"
block body
	- var app = 'weilion'
	loading(id=app+"_loading")
		bar(class=app+"_loading__top")
		bar(class=app+"_loading__bottom")
		audio(id=app+"_loading__audio", controls, autoplay)
			source(src="/data/002.mp3" type="audio/mpeg")
			source(src="/data/002.wav" type="audio/wav")
	weilion-home(id=app+"-home")
		//- weilion-particles-js(id=app+"-particles-js")
		weilion-home-text
			.container 
				.row 
					.col-12
						.texttyping
							span#text-replace
						.weilion-home-btn 
							text TIME LINE
							span >>>
								//- span >>>
						.weilion-home-vivobo
							.weilion-home-vivobo-video
								video(src="/data/w-x-header.mp4" muted autoplay preload="auto" loop)
							.weilion-home-odometer
								.odometer-number
									h2 holder
									#odometer-1.number.odometer 9999999
								.odometer-number
									h2 total liquidity
									#odometer-2.number.odometer 1000310427
								.odometer-number
									h2 burned
									#odometer-3.number.odometer 10000000
								.odometer-number
									h2 market cap
									#odometer-4.number.odometer 730244000014
								.player-controls
									span.play
										svg.player-btn-icon(xmlns="http://www.w3.org/2000/svg", viewBox="0 0 200 200")
											path.svg-play(fill="transparent", d="M90 50 L30 15 L30 160 L170 100 L130 75")
									span.pause
										svg.pause-btn-icon(xmlns="http://www.w3.org/2000/svg", viewBox="0 0 200 200")
											path.svg-pause(fill="transparent", d="M50 20 V160 M140 20 V160")

	weilion-weispace(id=app+"-weispace")
		.container 
			.row 
				.col-12
					h2.weispace-animated weispace
					.row 
						.col-lg-5
							.infobox.my-3.my-lg-4.my-lg-5
								//- .animatable(data-animate="animate__bounce animate__fadeInUp")
								span welion space 
								| is a matrix space station for the development of space exploration ecosystem using WEI energy for the initiation process. Theoretically, the WEI energy is made from each point in the blockchain space which is block-quantized in the matrix by the chain platform source core with core multi matters, for example Binance Smart Chain or Aleph Zero. Chain platform source cores are encrypted in unique NFT form as a unique matter in blockchain space exploration.
							
							.numberbox.my-3.my-lg-4.my-lg-5 
								.item.animatable(data-animate="animate__bounce animate__fadeInUp animate__faster")
									h3 length of the truss
									p 108.4 m
								.item.animatable(data-animate="animate__bounce animate__fadeInUp animate__fast")
									h3 WEIGHT (400 tons)
									p ~400.000 kg
								.item.animatable(data-animate="animate__bounce animate__fadeInUp")
									h3 the pressurized volume
									p -1000 m3
								.item.animatable(data-animate="animate__bounce animate__fadeInUp animate__slow")
									h3 Length of all modules
									p 74 m
						.col-lg-7.lanch
							figure.mb-4.d-lg-none
								img.w-100(src="./img/home-weispace-bg-crop.jpg", alt="", srcset="")
							ul.list-unstyled
								li.animatable(data-animate="animate__bounce animate__fadeInUp animate__faster")
									.icon 
										i.far.fa-calendar
									.text 
										span Launch date
										span May 12, 2021
								li.animatable(data-animate="animate__bounce animate__fadeInUp animate__fast")
									.icon 
										i.far.fa-comment-dots
									.text 
										span orbital speed
										span 7.66 km/s
								li.animatable(data-animate="animate__bounce animate__fadeInUp")
									.icon 
										i.far.fa-clone
									.text 
										span orbital altitude
										span 408 km
