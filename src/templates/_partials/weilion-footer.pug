
weilion-copyright(id=app+"-copyright")
	.container 
		.row 
			.col-xl-4.align-items-xl-center.justify-content-xl-start
				figure.animatable(data-animate="animate__fadeInUp")
					img(src="./img/qrcode.svg")
			.col-xl-8
				.copyright 
					ul.list-inline.animatable(data-animate="animate__fadeInUp")
						li.list-inline-item
							a(href="https://www.facebook.com/weilionspacestation" target="_blank")
								i.fa.fa-facebook
						li.list-inline-item
							a(href="#" target="_blank")
								i.fa.fa-reddit-alien
						li.list-inline-item
							a(href="https://twitter.com/weilionspace" target="_blank")
								i.fa.fa-twitter 
						li.list-inline-item
							a(href="https://t.me/weilionofficechanel" target="_blank")
								i.fa.fa-paper-plane 
						li.list-inline-item
							a(href="#" target="_blank")
								i.fa.fa-instagram 
						li.list-inline-item
							a(href="#" target="_blank")
								i.fa.fa-youtube-play 
					.logo.animatable(data-animate="animate__fadeInUp animate__fast")
						a(href="/#weilion-home") 
							img(src="./img/logo-big.png", alt="Weilion Logo")
					- var num = Date.now()
					.copytext.animatable(data-animate="animate__fadeInUp animate__slow")
						.rightc &copy; 2022 WEILION. All rights reserved.
						.small Build wei-#{num}.
